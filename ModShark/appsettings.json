{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "ModShark": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ModShark": {
    "Sharkey": {
      "IdFormat": "aidx",
      "ServiceAccount": "instance.actor",
      "ApiEndpoint": "http://127.0.0.1:3000"
    },
    
    "Postgres": {
      "Connection": "Host=localhost;Port=5432;Database=sharkey;Username=sharkey;Password=sharkey"
    },

    "Worker": {
      "PollInterval": 1800000
    },
    
    "Reporters": {
      "SendGrid": {
        "Enabled": false,
        "ApiKey": "",
        "FromAddress": "",
        "FromName": "ModShark",
        "ToAddresses": []
      },
      
      "Console": {
        "Enabled": true
      },
      
      "Native": {
        "Enabled": true,
        "UseApi": false
      },
      
      "Post": {
        "Enabled": false,
        "Visibility": "followers",
        "LocalOnly": true,
        "Audience": [],
        "Subject": "ModShark Report",
        "Template": "$report_body"
      }
    },
    
    "Rules": {
      "FlaggedUser": {
        "Enabled": true,
        
        "IncludeLocal": true,
        "IncludeRemote": true,
        "IncludeDeleted": false,
        "IncludeSuspended": false,
        "IncludeSilenced": false,
        "IncludeBlockedInstance": false,
        "IncludeSilencedInstance": true,
        
        "UsernamePatterns": [],
        
        "Timeout": 1000
      },

      "FlaggedInstance": {
        "Enabled": true,
        
        "IncludeSuspended": false,
        "IncludeSilenced": false,
        "IncludeBlocked": false,
        
        "HostnamePatterns": [],

        "Timeout": 1000
      }
    }
  }
}
