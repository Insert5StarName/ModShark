{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "ModShark": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ModShark": {
    "SendGrid": {
      "Enabled": false,
      "ApiKey": "",
      "FromAddress": "",
      "FromName": "ModShark",
      "ToAddresses": []
    },
    
    "Postgres": {
      "Connection": "Host=localhost;Port=5432;Database=sharkey;Username=sharkey;Password=sharkey"
    },
    
    "Worker": {
      "PollInterval": 1800000
    },
    
    "Rules": {
      "FlaggedUsername": {
        "Enabled": true,
        
        "IncludeLocal": true,
        "IncludeRemote": true,
        "IncludeDeleted": false,
        "IncludeSuspended": false,
        
        "FlaggedPatterns": []
      },

      "FlaggedHostname": {
        "Enabled": true,
        
        "FlaggedPatterns": []
      }
    }
  }
}
